# Verification OCR Service Configuration
# Copy this file to .env and adjust as needed

# War settings - fetched automatically from Foxhole API if not set
# VOCR_WAR__NUMBER=132
# VOCR_WAR__START_TIME=1770663602746

# Logging
VOCR_LOGGING__LOG_LEVEL=INFO

# OCR settings
VOCR_OCR__LANGUAGE=eng
VOCR_OCR__DEBUG_MODE=false
# VOCR_OCR__TESSERACT_CMD=/usr/bin/tesseract

# API server settings
# VOCR_API_SERVER__HOST=127.0.0.1
# VOCR_API_SERVER__PORT=8000
# VOCR_API_SERVER__CORS_ALLOW_ORIGINS=["https://yourdomain.com"]
# VOCR_API_SERVER__RATE_LIMIT=10/minute
# VOCR_API_SERVER__SERVE_FRONTEND=true

# API key authentication (uncomment to enable)
# When set, /verify and /sync endpoints require X-API-Key header
# VOCR_API_SERVER__API_KEY=your-secret-api-key-here
